<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lcbs.theresistanceavalon.AssembleTeamActivity"
    android:id="@+id/linear2"
    android:background="@drawable/background1"
    android:weightSum="1">

    <TextView
        android:id="@+id/quest_leader_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="80dp"
        android:text="@string/questLeader"
        android:textColor="#C5A495"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/team_size_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/teamSize"
        android:textColor="#C5A495"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
