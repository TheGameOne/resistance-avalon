<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lcbs.theresistanceavalon.GameSetupActivity"
    android:background="@drawable/background1"
    android:weightSum="1">

    <TextView
        android:id="@+id/howmany_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="200dp"
        android:text="@string/HowMany"
        android:textColor="#C5A495"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/five_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="#f3d28f"
        android:textColor="#433022"
        android:text="@string/five"/>

    <Button
        android:id="@+id/six_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#f3d28f"
        android:textColor="#433022"
        android:text="@string/six"/>

    <Button
        android:id="@+id/seven_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#f3d28f"
        android:textColor="#433022"
        android:text="@string/seven"/>
    <Button
        android:id="@+id/eight_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#f3d28f"
        android:textColor="#433022"
        android:text="@string/eight"/>
    <Button
        android:id="@+id/nine_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#f3d28f"
        android:textColor="#433022"
        android:text="@string/nine"/>
    <Button
        android:id="@+id/ten_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#f3d28f"
        android:textColor="#433022"
        android:text="@string/ten"/>

</LinearLayout>
